<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- styles for the 'BottomNavigation' View -->
    <declare-styleable name="BottomNavigation">
        <attr name="bbn_entries" format="reference"/>
        <attr name="bbn_badgeProvider" format="string"/>
    </declare-styleable>

    <!-- styles for the menu resource -->
    <declare-styleable name="BottomNavigationMenu">
        <!-- menu default background color -->
        <attr name="android:background"/>

        <!-- default badge color -->
        <attr name="bbn_badgeColor" format="color"/>

        <!-- animation duration for the menu items -->
        <attr name="bbn_itemAnimationDuration" format="integer"/>

        <!-- ripple selector color -->
        <attr name="bbn_rippleColor" format="color"/>

        <attr name="bbn_itemColorActive" format="color"/>

        <attr name="bbn_itemColorInactive" format="color"/>
    </declare-styleable>

    <!-- attributes for the 'item' tag within the menu resource. -->
    <declare-styleable name="BottomNavigationMenuItem">
        <!-- The ID of the item. -->
        <attr name="android:id"/>

        <!-- The title associated with the item. -->
        <attr name="android:title"/>

        <!-- The icon associated with this item.  This icon will not always be shown, so
             the title should be sufficient in describing this item. -->
        <attr name="android:icon"/>

        <!-- Whether the item is enabled (not currently used). -->
        <attr name="android:enabled"/>

        <!-- background color for the selected tab. If omitted, or 0, the background
         color will not change and the BottomNavigationMenu#background will be always used -->
        <attr name="android:color"/>
    </declare-styleable>

    <!-- style for the scroll behavior -->
    <declare-styleable name="BottomNavigationBehavior">
        <attr name="bbn_animationDuration" format="integer"/>
        <attr name="bbn_scrollEnabled" format="boolean"/>
    </declare-styleable>
    <!--PathAnimation-->
    <declare-styleable name="AnimatedPathView">
        <attr name="strokeColor" format="color"/>
        <attr name="strokeWidth" format="float"/>
    </declare-styleable>

    <!-- HtmlTextView -->
    <declare-styleable name="HtmlTextView">
        <attr name="loadingImg" format="reference"/>
        <attr name="errorImg" format="reference"/>
        <attr name="defaultWidth" format="reference"/>
        <attr name="defaultHeight" format="reference"/>
    </declare-styleable>

    <!-- SmoothCheckBox-->
    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="color_tick" format="color"/>
        <attr name="color_checked" format="color"/>
        <attr name="color_unchecked" format="color"/>
        <attr name="color_unchecked_stroke" format="color"/>
    </declare-styleable>

    <!--AvatarImageView-->
    <declare-styleable name="AvatarImageView">
        <attr name="aiv_TextSizeRatio" format="reference|float" />
        <attr name="aiv_TextMaskRatio" format="reference|float" />
        <attr name="aiv_BoarderColor" format="reference|color" />
        <attr name="aiv_TextColor" format="reference|color" />
        <attr name="aiv_BoarderWidth" format="reference|dimension" />
        <attr name="aiv_ShowBoarder" format="reference|boolean" />
        <attr name="aiv_CornerRadius" format="reference|dimension" />
    </declare-styleable>

    <!--SideBar-->
        <declare-styleable name="LetterSideBar">
            <attr name="scaleSize" format="integer"/>
            <attr name="scaleItemCount" format="integer"/>
            <attr name="scaleWidth" format="dimension"/>
        </declare-styleable>

    <!--FlikerProgressBar-->
    <declare-styleable name="FlikerProgressBar">
        <attr name="textSize" format="dimension"/>
        <attr name="loadingColor" format="color"/>
        <attr name="stopColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="borderWidth" format="dimension"/>
    </declare-styleable>

    <!--带边框的textview-->
    <declare-styleable name="BorderTextView">
        <attr name="borderTextView_strokeWidth" format="dimension"/>
        <attr name="borderTextView_cornerRadius" format="dimension"/>
        <attr name="borderTextView_strokeColor" format="color"/>
        <attr name="borderTextView_followTextColor" format="boolean"/>
    </declare-styleable>
</resources>