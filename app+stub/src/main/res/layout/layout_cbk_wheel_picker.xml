<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="11"
    android:gravity="center"
    >
    <com.eazytec.bpm.appstub.view.timepick.view.WheelView
        android:id="@+id/pick_time_wheel_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

    <com.eazytec.bpm.appstub.view.timepick.view.WheelView
        android:id="@+id/pick_time_wheel_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <com.eazytec.bpm.appstub.view.timepick.view.WheelView
        android:id="@+id/pick_time_wheel_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/pick_time_wheel_week"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="星期二"
        />

    <com.eazytec.bpm.appstub.view.timepick.view.WheelView
        android:id="@+id/pick_time_wheel_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <com.eazytec.bpm.appstub.view.timepick.view.WheelView
        android:id="@+id/pick_time_wheel_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

</LinearLayout>