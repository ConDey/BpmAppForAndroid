<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:pv="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".applaunch.AppLaunchActivity">

    <com.eazytec.bpm.applaunch.ParticleView
        android:id="@+id/pv_applaunch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/appLaunch_background"
        pv:pv_background_color="@color/appLaunch_background"
        pv:pv_host_text_anim_time="800"
        pv:pv_particle_text_size="12sp"
        pv:pv_spread_anim_time="1000"
        pv:pv_text_anim_time="800"
        pv:pv_text_color="@color/appLaunch_textColor"/>

</LinearLayout>
