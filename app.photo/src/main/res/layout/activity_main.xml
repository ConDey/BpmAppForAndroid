<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" tools:context="com.eazytec.bpm.app.photo.MainActivity">

    <include layout="@layout/bpm_toolbar"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/media_picker_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:overScrollMode="never" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/media_picker_photo_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/media_picker_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="全部"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/media_picker_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="图片"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/media_picker_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="视频"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/media_picker_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="音频"
                    android:textColor="@color/color_53"
                    android:textSize="14sp" />
            </RadioGroup>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
