<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--tab:未读+已读-->
    <android.support.design.widget.TabLayout
        android:id="@+id/activity_message_tab_main_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_0"
        android:gravity="center"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color_primary"
        app:tabSelectedTextColor="@color/color_primary"
        app:tabTextColor="@color/grey_500"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_message_tab_main_tablayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>