<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:cardUseCompatPadding="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/homesetting_userinfo_head_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="@color/color_black_primary"
            android:textSize="16sp"/>


        <LinearLayout
            android:id="@+id/homesetting_userinfo_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homesetting_userinfo_head_textview"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名 ： "
                android:textColor="@color/color_black_primary"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/homesetting_userinfo_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_primary"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homesetting_userinfo_deparment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homesetting_userinfo_name_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门 ： "
                android:textColor="@color/color_black_primary"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/homesetting_userinfo_departmentname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_primary"
                android:textSize="14sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/homesetting_userinfo_position_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homesetting_userinfo_deparment_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位 ： "
                android:textColor="@color/color_black_primary"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/homesetting_userinfo_position_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_primary"
                android:textSize="14sp"/>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_setting_default_photo"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/bpm_single_line"></include>

    <RelativeLayout
        android:id="@+id/homesetting_updateapk_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawer_listview_item_bg"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_setting_update"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="在线更新"
            android:textColor="@color/color_black_primary"
            android:textSize="15sp"/>

    </RelativeLayout>

    <include layout="@layout/bpm_single_line"></include>

    <RelativeLayout
        android:id="@+id/homesetting_updatepwd_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawer_listview_item_bg"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_setting_updatepwd"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="@color/color_black_primary"
            android:textSize="15sp"/>

    </RelativeLayout>

    <include
        layout="@layout/bpm_single_line"></include>

    <RelativeLayout
        android:id="@+id/homesetting_menu_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawer_listview_item_bg"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_setting_setting"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="菜单设置"
            android:textColor="@color/color_black_primary"
            android:textSize="15sp"/>

    </RelativeLayout>


    <include layout="@layout/bpm_single_line"></include>

    <RelativeLayout
        android:id="@+id/homesetting_clean_cache_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawer_listview_item_bg"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_setting_clean"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:textColor="@color/color_black_primary"
            android:textSize="15sp"/>

    </RelativeLayout>


    <include layout="@layout/bpm_single_line"></include>

    <RelativeLayout
        android:id="@+id/homesetting_loginout_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawer_listview_item_bg"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_setting_loginout"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="退出"
            android:textColor="@color/color_black_primary"
            android:textSize="15sp"/>

    </RelativeLayout>

    <include layout="@layout/bpm_single_line"></include>

</LinearLayout>