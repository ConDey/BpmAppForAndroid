<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/bpm_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/search_input_layout"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/drawer_search_result_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <com.eazytec.bpm.appstub.view.edittext.ClearEditText
                        android:id="@+id/search_input_edittext"
                        android:layout_width="180dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/drawer_search_result_bg"
                        android:drawableLeft="@mipmap/customer_search_icon"
                        android:drawablePadding="3dp"
                        android:hint="点击输入搜索内容"
                        android:imeOptions="actionSearch"
                        android:paddingLeft="7dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColor="@color/color_black_primary"
                        android:textColorHint="@color/color_grey_primary"
                        android:textSize="13sp"
                        android:windowSoftInputMode="stateVisible"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/user_search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>

</LinearLayout>


